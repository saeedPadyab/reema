{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "types": ["babel-plugin-tailwind-string"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@Components/*": ["./src/components/*"],
      "@Hooks/*": ["./src/hooks/*"],
      "@Utils/*": ["./src/utils/*"],
      "@Interfaces/*": ["./src/interfaces/*"],
      "@Core/*": ["./src/core/*"],
      "@Shared/*": ["./src/shared/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "src/utils/index.js"]
}
